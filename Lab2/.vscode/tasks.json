{
    "version":"2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang сборка активного файла",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/src/part1.c ",
                "${workspaceFolder}/src/part2.c ",
                "${workspaceFolder}/src/part3.c ",
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "компилятор: /usr/bin/clang"
        }
    ]
}